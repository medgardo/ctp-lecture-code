<div class="row">
<div class="col-xs-12">
<h1>Create a new Author</h1>
</div>

<div class="col-xs-12">
{{#if errors}}
  <h3>Errors occured</h3>
  {{#each errors}}
    <p>Path: {{path}}</p>
    <p>Message: {{message}}</p>
    <hr />
  {{/each}}
{{/if}}

  <form name="create-post" action="/authors" method="post">
  <div class="form-group">
    <label>First name</label>
    <input type="text" name="first_name" placeholder="First name">
  </div>
  <div class="form-group">
    <label>Last name</label>
    <input type="text" name="last_name" placeholder="Last name">
  </div>
  <div class="form-group">
    <label>Short Bio</label>
    <textarea name="bio" rows="3" placeholder="About the author... (500 char limit)"></textarea>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
</div>
